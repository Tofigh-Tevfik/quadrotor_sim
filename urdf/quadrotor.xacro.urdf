    <collision>
        <geometry>
            <mesh filename="package://quadrotor_sim/meshes/propeller_ccw.dae" scale="0.001 0.001 0.001"/>
        </geometry>
    </collision>
    <inertial>
        <mass value="0.05" />
        <inertia ixx="0.0000001" ixy="0.0" ixz="0.0" iyy="0.0000001" iyz="0.0" izz="0.00001" />
    </inertial>
</link>


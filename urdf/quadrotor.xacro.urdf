<?xml version="1.0"?>
<robot xmlns:xacro="http://www.ros.org/wiki/xacro" name="quadrotor">

<xacro:include filename="$(find quadrotor_sim)/urdf/quadrotor.gazebo" /> 

<!-- dummy_link -->
<link name="quadrotor" />

<!-- dummy_joint -->
<joint name="quadrotor_joint" type="fixed">
    <parent link="quadrotor" />
    <child link="base_link" />
</joint>

<!-- base_link -->
<link name="base_link">
    <visual>
        <origin rpy="0.0 0.0 ${-pi/2}" />
        <geometry>
            <mesh filename="package://quadrotor_sim/meshes/quadrotor.dae" scale="0.001 0.001 0.001"/>
        </geometry>
    </visual>
    <collision>
        <origin xyz="0.0 0.0 0.013" rpy="0.0 0.0 ${-pi/2}" />
        <geometry>
            <!-- <mesh filename="package://quadrotor_sim/meshes/quadrotor.dae" scale="0.001 0.001 0.001"/> -->
            <box size="0.31781 0.31781 0.09535" />
        </geometry>
    </collision>
    <inertial>
        <mass value="1.25" />
        <inertia ixx="0.0232" ixy="0.0" ixz="0.0" iyy="0.0232" iyz="0.0" izz="0.0468" />
    </inertial>
</link>

<!-- propeller_1 -->
<joint name="propeller_1" type="continuous">
    <parent link="base_link" />
    <child link="prop1" />
    <origin xyz="0.15891 0.15891 0.0475" />
    <axis xyz="0 0 1" />
</joint>

<!-- prop1 -->
<link name="prop1">
    <visual>
        <geometry>
            <mesh filename="package://quadrotor_sim/meshes/propeller_ccw.dae" scale="0.001 0.001 0.001"/>
